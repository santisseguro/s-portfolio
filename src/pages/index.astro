    <!-- Plyr JS & IntersectionObserver -->
    <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const player = new Plyr('#plyr-video', {
          controls: ['play', 'mute', 'progress']
        });

        const video = document.getElementById('plyr-video');
        const observer = new IntersectionObserver(
          ([entry]) => {
            if (!entry.isIntersecting) {
              video.pause();
            } else if (video.paused) {
              video.play();
            }
          },
          { threshold: 0.5 }
        );

        if (video) observer.observe(video);
      });
    </script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const players = document.querySelectorAll('.plyr-showcase');

    players.forEach(p => {
      const player = new Plyr(p, {
        controls: ['mute']
      });

      // Ensure muted state is forced at load
      p.muted = true;
      p.volume = 0;
      p.setAttribute('muted', ''); // Ensure attribute is there for autoplay
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('#video-grid video');

    videos.forEach(video => {
      video.addEventListener('loadedmetadata', () => {
        const container = video.parentElement;
        const isVertical = video.videoHeight > video.videoWidth;

        if (isVertical) {
          container.classList.add('w-1/4', 'aspect-[9/16]'); // 25%
        } else {
          container.classList.add('w-1/2', 'aspect-video'); // 50%
        }
      });
    });
  });
</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const videos = document.querySelectorAll('.plyr-showcase');

      const observer = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            const video = entry.target;
            if (entry.isIntersecting) {
              video.play();
            } else {
              video.pause();
            }
          });
        },
        { threshold: 0.5 }
      );

      videos.forEach(video => {
        observer.observe(video);
      });
    });
  </script>

