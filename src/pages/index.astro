<style>
.filter-btn.active {
  background-color: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.5);
  color: white;
  box-shadow: 0 0 12px rgba(255, 255, 255, 0.4), 0 0 24px rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.filter-btn-primary.active {
  background-color: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
}
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const Shuffle = window.Shuffle;
    const container = document.getElementById('shuffle-container');
    const shuffleInstance = new Shuffle(container, {
      itemSelector: '.shuffle-item',
      speed: 500,
    });

    let activeFormat = 'all';
    let activeCategory = null;

    function applyFilters() {
      shuffleInstance.filter(element => {
        const format = element.dataset.format;
        const category = element.dataset.category;
        const matchesFormat = activeFormat === 'all' || format === activeFormat;
        const matchesCategory = !activeCategory || category.includes(activeCategory);
        return matchesFormat && matchesCategory;
      });
    }

    document.querySelectorAll('.filter-btn-primary').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.filter-btn-primary').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        activeFormat = btn.dataset.format;
        applyFilters();
      });
    });

    document.querySelectorAll('.filter-btn:not(.filter-btn-primary)').forEach(btn => {
      btn.addEventListener('click', () => {
        const isActive = btn.classList.contains('active');
        document.querySelectorAll('.filter-btn:not(.filter-btn-primary)').forEach(b => b.classList.remove('active'));
        activeCategory = isActive ? null : btn.dataset.category;
        if (!isActive) btn.classList.add('active');
        applyFilters();
      });
    });

